	<s:VGroup top="10" left="10" bottom="10" right="10" clipAndEnableScrolling="true">
		<mx:Form width="100%" height="100%">
<!--
			<mx:FormItem>
				<s:CheckBox 
					id="_active"
					label="Visible?"
