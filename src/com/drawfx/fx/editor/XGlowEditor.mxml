-->
			<mx:FormItem label="Color">
				<mx:ColorPicker 
					id="_color" 
					selectedColor="{_effect.color}" 
					change="onColorChange(event);"/>
			</mx:FormItem>
			<mx:FormItem label="Alpha">
				<s:NumericStepper 
					id="__alpha" 
					width="60" 
					minimum="0" 
					maximum="1"
					stepSize="0.025" 
					value="{_effect.alpha}" 
					change="onStepperChange(event);"/>
			</mx:FormItem>
			<mx:FormItem label="Blur X">
				<s:NumericStepper 
					id="_blurX" 
					width="60" 
					minimum="0"
					maximum="20"
					value="{_effect.blurX}" 
					change="onStepperChange(event);"/>
			</mx:FormItem>
			<mx:FormItem label="Blur Y">
				<s:NumericStepper 
					id="_blurY" 
					width="60" 
					minimum="0"
					maximum="20"
					value="{_effect.blurY}" 
					change="onStepperChange(event);"/>
			</mx:FormItem>
			<mx:FormItem label="Quality">
				<s:NumericStepper 
					id="_quality" 
					width="60" 
					value="{_effect.quality}" 
					change="onStepperChange(event);"/>
			</mx:FormItem>
			<mx:FormItem label="Strength">
				<s:NumericStepper 
					id="_strength" 
					width="60" 
					value="{_effect.strength}" 
					change="onStepperChange(event);"/>
			</mx:FormItem>
			<mx:FormItem>
				<s:CheckBox 
					id="_inner"
					label="Inner?"
					selected="{_effect.inner}" 
					change="onCheckBoxChange(event);"/>
			</mx:FormItem>
			<mx:FormItem>
				<s:CheckBox 
					id="_knockout"
					label="Knockout?"
					selected="{_effect.knockout}" 
					change="onCheckBoxChange(event);"/>
			</mx:FormItem>
		</mx:Form>
